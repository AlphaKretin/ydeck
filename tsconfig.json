{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"lib": ["es2017"],
		"declaration": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"rootDir": "./src",
		"outDir": "./dist"
	},
	"compileOnSave": true
}
