{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"lib": ["esnext"],
		"declaration": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
		"rootDir": "./src",
		"outDir": "./dist",
	},
	"compileOnSave": true,
	"include": ["src/*.ts", "src/*.json"]
}
